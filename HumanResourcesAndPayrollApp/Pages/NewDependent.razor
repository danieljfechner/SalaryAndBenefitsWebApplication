@inject IEmployeeService employeeService
@inject NavigationManager NavigationManager
<h3>Add new Dependent</h3>

<EditForm class="form-inline my-2" Model="@newDependent" OnValidSubmit="AddDependent">
    <DataAnnotationsValidator />
    <div class="row padding-bottom-2rem">
        <div class="form-group my-2 col-sm">
            <label for="FirstName" class="control-label">First Name</label>
            <input form="FirstName" class="form-control" @bind="@newDependent.FirstName" />
            <ValidationMessage For="@(() => newDependent.FirstName)"></ValidationMessage>
        </div>
        <div class="form-group mx-4 my-2 col-sm">
            <label for="MiddleName" class="control-label">Middle Name</label>
            <input form="MiddleName" class="form-control" @bind="@newDependent.MiddleName" />
            <ValidationMessage For="@(() => newDependent.MiddleName)"></ValidationMessage>
        </div>
        <div class="form-group my-2 col-sm">
            <label for="LastName" class="control-label">Last Name</label>
            <input form="LastName" class="form-control" @bind="@newDependent.LastName" />
            <ValidationMessage For="@(() => newDependent.LastName)"></ValidationMessage>
        </div>
        <div class="form-group mx-2 my-2 col-sm padding-top-one-point-five-rem">
            <button class="btn btn-outline-primary" type="submit">Add Dependent</button>
        </div>
    </div>
</EditForm>