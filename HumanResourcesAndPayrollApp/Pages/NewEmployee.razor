@page "/NewEmployee"
@inject IEmployeeService employeeService
@inject NavigationManager NavigationManager

<h1>Add New Employee</h1>
<hr />

<EditForm Model="@newEmployee" OnValidSubmit="@CreateEmployee" class="form-inline my-2">    
    <div class="col-md-10">
        <div class="row padding-bottom-2rem">
            <div class="form-group my-2 col-sm">
                <label for="FirstName" class="control-label">First Name</label>
                <input form="FirstName" class="form-control" @bind="@newEmployee.FirstName" />
                <ValidationMessage For="@(() => @newEmployee.FirstName)"></ValidationMessage>
            </div>
            <div class="form-group mx-4 my-2 col-sm">
                <label for="MiddleName" class="control-label">Middle Name</label>
                <input form="MiddleName" class="form-control" @bind="@newEmployee.MiddleName" />
                <ValidationMessage For="@(() => @newEmployee.MiddleName)"></ValidationMessage>
            </div>
            <div class="form-group my-2 col-sm">
                <label for="LastName" class="control-label">Last Name</label>
                <input form="LastName" class="form-control" @bind="@newEmployee.LastName" />
                <ValidationMessage For="@(() => @newEmployee.LastName)"></ValidationMessage>
            </div>
            <div class="form-group mx-2 my-2 col-sm padding-top-2rem">
                <label for="IsMarried">Is Married</label>
                <input type="checkbox" form="IsMarried" checked=@newEmployee.IsMarried
                       @onchange="ToggleIsMarried" />
            </div>
        </div>
        <div class="row">
            @if (isMarried && newEmployee.Spouse != null)
            {
                <hr />
                <h3>Add Spouse</h3>

                <div class="form-group my-2 col-sm">
                    <label for="FirstName" class="control-label">First Name</label>
                    <input form="FirstName" class="form-control" @bind="@newEmployee.Spouse.FirstName" />
                    <ValidationMessage For="@(() => @newEmployee.Spouse.FirstName)"></ValidationMessage>
                </div>
                <div class="form-group mx-4 my-2 col-sm">
                    <label for="MiddleName" class="control-label">Middle Name</label>
                    <input form="MiddleName" class="form-control" @bind="@newEmployee.Spouse.MiddleName" />
                    <ValidationMessage For="@(() => @newEmployee.Spouse.MiddleName)"></ValidationMessage>
                </div>
                <div class="form-group my-2 col-sm">
                    <label for="LastName" class="control-label">Last Name</label>
                    <input form="LastName" class="form-control" @bind="@newEmployee.Spouse.LastName" />
                    <ValidationMessage For="@(() => @newEmployee.Spouse.LastName)"></ValidationMessage>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <div type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel">Cancel</div>
            </div>
        </div>
    </div>
</EditForm>